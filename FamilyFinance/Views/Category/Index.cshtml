@model IEnumerable<BLL.Category>

@{
    ViewBag.Title = "Kategóriák";
}

<h2>Kategóriák</h2>

<p>
    @Html.ActionLink("Új kategória", "Create")
</p>
<table>
    <tr>
        <th>
            Kategória neve
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Name
        </td>
        <td>
            @Html.ActionLink("Módosítás", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Tranzakciók", "Transactions", new { id=item.Id }) |
            @Html.ActionLink("Törlés", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
